map = map(			"field1", 			"field2", 			"field3",
		tuple(		"a",				"b",				"c"		),
		tuple(		"b",				"c",				"d"		),
		tuple(		"c",				"d",				"e"		),
		tuple(		"d",				"e",				"f"		)
	)
test = map[0]
confirm("Non array access to first record, second field", "b", test/field2)
confirm("Array access to first record, second field", "b", map[0]/field2)
confirm("Access to last record, third field", "f", map[3]/field3)

for (record : map)
	switch($index)
		case (0)
			expected = "b"
		case (1)
			expected = "c"
		case (2)
			expected = "d"
		case (3)
			expected = "e"
	confirm("Checking field 1 of " + $index, expected, record/field2)
	confirm("Checking field 1 of " + $index, expected, map[$index]/field2)  